<div class="popover-container">
  <button
    class="popover__btn"
    type="button"
    title="Information popover"
    aria-describedby="[% popover_id %]-popover"
  >
    <div class="arrow"></div>
  </button>
  <div class="popover bs-popover-bottom" role="tooltip" id="[% popover_id %]-popover">
    <div class="popover-body">
      [%- IF popover_title -%]<h4>[% popover_title %]</h4>[%- END -%]
      [% popover_body %]
    </div>
  </div>
</div>
