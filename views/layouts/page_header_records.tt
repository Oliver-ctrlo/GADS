<div class="content-block__head row">
  <div class="content-block__info col-xl-3">
    <div class="content-block__intro">
      [%
        table_view_buttons = [{
          type        = "link",
          target      = "?viewtype=table",
          class       = "btn btn-table" _ (viewtype == "table" ? " btn-active" : ""),
          label       = "Table"
        },{
          type        = "link",
          target      = "?viewtype=graph",
          class       = "btn btn-graph" _ (viewtype == "graph" ? " btn-active" : ""),
          label       = "Graph"
        },{
          type        = "link",
          target      = "?viewtype=timeline",
          class       = "btn btn-timeline" _ (viewtype == "timeline" ? " btn-active" : ""),
          label       = "Timeline"
        }];
      
        # IF layout.has_globe;
        #   table_view_buttons.push({
        #     type        = "button",
        #     button_type = "button",
        #     target      = "?viewtype=globe",
        #     class       = "btn btn-globe" _ (viewtype == "globe" ? " btn-active" : ""),
        #     label       = "Globe"
        #   });
        # END;
      
        INCLUDE snippets/button_list.tt
          list_class = "list--horizontal list--no-borders"
          buttons    = table_view_buttons;
      %]
    </div>
  </div>
  
  <div class="content-block__aside col-xl-9">
  [% IF viewtype == "graph" %]
    <a href="[% url.page %]/[% layout.identifier %]/graph/0" class="btn btn-add">
      Add a graph
    </a>
  [% ELSIF viewtype == "table" %]
    <a href="[% url.page %]/[% layout.identifier %]/record/" class="btn btn-add">
      Add a record
    </a>
  [% END %]
  </div>
</div>
